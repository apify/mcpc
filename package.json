{
  "name": "@apify/mcpc",
  "version": "0.1.2",
  "description": "Universal command-line client for the Model Context Protocol (MCP).",
  "type": "module",
  "keywords": [
    "mcp",
    "model-context-protocol",
    "cli",
    "llm",
    "ai"
  ],
  "license": "Apache-2.0",
  "author": "Jan Curn (@jancurn)",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/apify/mcpc.git"
  },
  "bugs": {
    "url": "https://github.com/apify/mcpc/issues"
  },
  "homepage": "https://github.com/apify/mcpc",
  "bin": {
    "mcpc": "./bin/mcpc",
    "mcpc-bridge": "./bin/mcpc-bridge"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "test": "npm run test:unit && npm run test:e2e",
    "test:unit": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "./test/e2e/run.sh",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"test/**/*.ts\"",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "prepublishOnly": "npm version patch --no-git-tag-version && npm run lint && npm run build && npm test",
    "publish:placeholder": "bash scripts/publish-placeholder.sh"
  },
  "dependencies": {
    "@inquirer/input": "^5.0.3",
    "@inquirer/select": "^5.0.3",
    "@modelcontextprotocol/sdk": "^1.25.1",
    "chalk": "^5.6.2",
    "commander": "^14.0.2",
    "keytar": "^7.9.0",
    "ora": "^9.0.0",
    "proper-lockfile": "^4.1.2",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^25.0.3",
    "@types/proper-lockfile": "^4.1.4",
    "@types/uuid": "^11.0.0",
    "@typescript-eslint/eslint-plugin": "^8.50.0",
    "@typescript-eslint/parser": "^8.50.0",
    "eslint": "^8.57.1",
    "jest": "^30.2.0",
    "prettier": "^3.7.4",
    "ts-jest": "^29.4.6",
    "typescript": "^5.9.3"
  }
}
